<h1>Update</h1>
{{!-- if you open and close this lines without the each, you only print one --}}
<div id='updateContainer'>
  {{#userUpd}}
  <h3>{{username}}</h3>


  <form action="/userUPD/{{_id}}" method="POST">
    <div class="form-group ">
      <label for="exampleFormControlInput1">User Name</label>
      <input type="text" name='username' class="form-control" placeholder="someone" value={{username}}>
    </div>
    <div class="form-group">
      <label for="exampleFormControlSelect1">Occupation</label>
      <select name='role' class="form-control">
        <option value="BOSS">Boss</option>
        <option value="DEVELOPER">Developer</option>
        <option value="TA">TA</option>
      </select>
    </div>
    <div class="form-group">
      <label for="exampleFormControlInput1">Password</label>
      <input type="text" name='password' class="form-control" placeholder="passworld">
    </div>
    <button class="btn btn-warning">Update</button>
  </form>

  {{/userUpd}}

</div>